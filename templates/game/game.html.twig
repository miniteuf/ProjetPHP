{% extends "base.html.twig" %}

{% block body %}
    
<div class="album py-5">
   <div class="container">
      <div class="container hero">
         <div class="row">
            <div class="col-md-8 offset-md-2">
               <h1 class="text-center">Nos jeux</h1>
            </div>
         </div>
      </div>
            <div class="col-md-9">
               <div class="row">
               {% for games in listGames %}
                  <div class="col-md-4">
                     <div class="card box-shadow">
                    
                        <div class="card-body">
                           <h2 class="card-text font-weight-bold">{{ games.Name }}</h2>
                           <p class="card-text">{{ games.Description }}</p>
                           
                        </div>   
                     </div>
                  </div>
               {% endfor %}
               </div>
            </div>
            {{ knp_pagination_render(listGames) }}
         </div>
      </div>
   </div>
</div>


        
{% endblock %}